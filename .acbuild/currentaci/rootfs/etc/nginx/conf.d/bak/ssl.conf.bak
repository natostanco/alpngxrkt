#
# HTTPS server configuration
#

server {
    listen       8080;

	server_name   *.hi-li.net;

    rewrite ^ http://server.hi-li.net:8080$request_uri?  permanent;

	ssl on;
	ssl_certificate /usr/local/ispconfig/interface/ssl/ispserver.crt;
	ssl_certificate_key /usr/local/ispconfig/interface/ssl/ispserver.key;

    location / {
        root /var/www/html;
        index  index.html index.htm;
    }
}
server {
  listen *:443 default_server;
  ssl on;
  rewrite ^(.*) http://$host$1 permanent;

	ssl_certificate /var/www/clients/client0/web10/ssl/blogmal.com.crt;
        ssl_certificate_key /var/www/clients/client0/web10/ssl/blogmal.com.key;
 }
